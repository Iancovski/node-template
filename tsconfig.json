{
    "compilerOptions": {
        "allowArbitraryExtensions": true,
        "allowJs": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": ["ESNext"],
        "module": "NodeNext",
        "moduleDetection": "force",
        "moduleResolution": "NodeNext",
        "noUncheckedIndexedAccess": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": false,
        "target": "ESNext"
    }
}
